#include<stdio.h>
int conv(int n),max(int a[10]);
int conv(int n)
{
    int array[10];
    for(int i=0;n>0;i++)
{
    array[i]=n%10;
    n=n/10;
}
max(array);
}
int max(int a[10])
{
    for(int i=1;i<10;i++)
    a[0]=a[0]>a[i]?a[0]:a[i];
}
int main()
{
    int a;
    printf("enter the number");
    scanf("%d",&a);
    printf("The maximum digit is %d",conv(a));
    return 0;
}
